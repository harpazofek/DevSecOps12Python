pipeline{
    agent any
    stages{
        stage('checkout'){
            steps{
                checkout([$class: 'GitSCM', branches: [[name: '*/main']], extensions: [], userRemoteConfigs: [[url: 'https://github.com/devopsPRO27/03.01.22']]])
            }
        }
        stage('build'){
            steps{
               sh 'python3 Loops.py'
            }
        }
        stage('test'){
            steps{
                timeout(time: 3,unit: 'SECONDS'){
                    sh 'ping 8.8.8.8 '
                }
                
            }
        }
    
    }
    post{
        aborted{
            sh 'echo please give me more time'
        }
        success{
            sh 'echo docker build -t hothaifaimage .'
        }
        failure{
            sh 'echo die'
        }
    }
}